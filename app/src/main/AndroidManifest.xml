<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:enableOnBackInvokedCallback="true">

    <!-- Location Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaManiaApp"
        tools:targetApi="31">

        <!-- Activities -->
        <activity android:name=".DeliverymanDeliveryHistoryActivity" android:exported="false" />
        <activity android:name=".DeliverymanHomeActivity" android:exported="false" />
        <activity android:name=".SignUpActivity" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminBranchEmployeeManagementActivity" android:exported="false" />
        <activity android:name=".AdminDeliverymanManagement" android:exported="false" />
        <activity android:name=".AccountActivity" android:exported="false" />
        <activity android:name=".AdminHomeActivity" android:exported="false" />
        <activity android:name=".EmployeeHomeActivity" android:exported="false" />
        <activity android:name=".EmployeeOrderActivity" android:exported="false" />
        <activity android:name=".CustomerOrderActivity" android:exported="false" />
        <activity android:name=".MenuUnderCategoryActivity" android:exported="false"/>

        <!-- Customer Home is launcher -->
        <activity android:name=".CustomerHomeActivity" android:exported="true">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PizzaManiaApp" />

        <!-- (Optional) Maps API Key if needed -->
        <!--
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        -->
    </application>
</manifest>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/stripText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PizzaMania"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile15"
            android:background="@null"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Profile Button" />
    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomAppBar"
        android:layout_below="@+id/topBar"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Accepted Title -->
            <TextView
                android:id="@+id/acceptedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accepted Deliveries"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"
                android:paddingStart="16dp"
                android:layout_marginTop="12dp"/>

            <!-- Accepted RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/acceptedRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="visible"/>

            <!-- Pending Title -->
            <TextView
                android:id="@+id/pendingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending Deliveries"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"
                android:paddingStart="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Pending RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pendingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="visible"/>

            <!-- Shared No Deliveries Placeholder -->
            <LinearLayout
                android:id="@+id/noDeliveriesLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/noDeliveriesImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_no_deliveries2"
                    android:contentDescription="No Deliveries" />

                <TextView
                    android:id="@+id/noDeliveriesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No deliveries"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom AppBar -->
    <LinearLayout
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#333333"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home3"
            android:background="@null"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/deliveryHistoryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_deliveryhistory8"
            android:background="@null"
            android:contentDescription="Delivery History" />
    </LinearLayout>

</RelativeLayout>

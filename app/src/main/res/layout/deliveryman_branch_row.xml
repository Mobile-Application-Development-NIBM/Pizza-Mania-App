<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">
    <!-- Root layout: container for one branch and its deliverymen -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f44c4b"
        android:layout_marginBottom="8dp"/>
    <!-- Divider strip: separates branches with red line -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- Horizontal row for branch name + Add Deliveryman button -->

        <TextView
            android:id="@+id/branchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Branch Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <!-- Branch name text -->

        <Button
            android:id="@+id/addDeliverymanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Deliveryman"
            android:backgroundTint="#f44444"
            android:textColor="#FFFFFF"/>
        <!-- Button to add deliveryman -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deliverymanContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"/>
    <!-- Container: deliverymen will be listed dynamically here -->

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout: card container for a single menu item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="8dp"
    android:layout_marginEnd="12dp">
    <!-- background="@drawable/card_background": styled card background -->
    <!-- layout_marginEnd="12dp": adds spacing between cards in a row -->

    <!-- ImageView: menu item picture (e.g., pizza image) -->
    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_pizza" />
    <!-- scaleType="centerCrop": crops image edges while filling view -->

    <!-- TextView: menu item name -->
    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:singleLine="true"
        android:scrollHorizontally="false"/>
    <!-- ellipsize="end": shows "..." if text is too long -->
    <!-- singleLine="true": keeps text on one line -->

    <!-- TextView: menu item price -->
    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 0"
        android:textSize="13sp"
        android:textColor="#444444" />

    <!-- LinearLayout: row for action buttons (edit, delete) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp">
        <!-- gravity="end": aligns buttons to the right side -->

        <!-- ImageButton: edit button -->
        <ImageButton
            android:id="@+id/editMenuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit2"
            android:background="@null"
            android:layout_marginEnd="4dp"/>
        <!-- background="@null": removes default button background -->

        <!-- ImageButton: delete button -->
        <ImageButton
            android:id="@+id/deleteMenuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>

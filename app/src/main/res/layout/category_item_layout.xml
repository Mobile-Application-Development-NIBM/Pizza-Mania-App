<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout: main vertical container -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- LinearLayout: row for category title and "View All" button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Category title -->
        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

        <!-- Spacer pushes button to right -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- View All Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewAllButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="View All"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/view_all_button_bg"
            android:backgroundTint="@null"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- RecyclerView: horizontal list of items under this category -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false" />
</LinearLayout>

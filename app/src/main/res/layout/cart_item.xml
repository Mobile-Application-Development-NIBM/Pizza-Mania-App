<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_background"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <!-- Menu Image -->
    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_pizza"
        android:layout_marginEnd="10dp" />

    <!-- Name + Price + Quantity -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicago Deep-Dish Pizza"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/cartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 2500 x2"
            android:textSize="13sp"
            android:textColor="#444444" />
    </LinearLayout>

    <!-- Remove Button -->
    <ImageButton
        android:id="@+id/removeCartItemButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/button_gray_glass"
        android:src="@drawable/stripe_link_close"
        android:scaleType="centerInside"
        android:contentDescription="Remove from Cart"
        app:tint="#F44444" />
</LinearLayout>

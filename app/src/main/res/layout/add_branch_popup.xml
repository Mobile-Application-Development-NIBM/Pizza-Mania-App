<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/glass_bg">
    <!-- RelativeLayout: main popup container -->
    <!-- background: glassy background image -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <!-- LinearLayout: vertical layout to hold title, inputs, and buttons -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Branch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#e6b33c"
            android:layout_gravity="center"/>
        <!-- TextView: popup title -->

        <EditText
            android:id="@+id/branchIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch ID (auto)"
            android:inputType="text"
            android:backgroundTint="#fcc43c"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp"
            android:enabled="false"/>
        <!-- EditText: shows branch ID, auto-generated, disabled for editing -->

        <EditText
            android:id="@+id/branchNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch Name (e.g., Galle)"
            android:inputType="text"
            android:backgroundTint="#fcc43c"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp"/>
        <!-- EditText: user enters branch name -->

        <EditText
            android:id="@+id/contactInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="number"
            android:backgroundTint="#fcc43c"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp"/>
        <!-- EditText: user enters contact number for branch -->

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location (lat, long)"
            android:inputType="text"
            android:backgroundTint="#fcc43c"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:layout_marginTop="10dp"/>
        <!-- EditText: user enters branch coordinates as "lat, long" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <!-- LinearLayout: holds Cancel and Save buttons side by side -->

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#fcc43c"
                android:backgroundTint="#FFFFFF"/>
            <!-- Button: cancels adding new branch -->

            <Button
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#fcc43c"/>
            <!-- Button: saves the new branch -->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


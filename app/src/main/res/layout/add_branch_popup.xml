<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/glass_bg">
        <!-- RelativeLayout: main popup container -->
        <!-- background: glassy background image -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <!-- LinearLayout: vertical layout to hold title, inputs, and buttons -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popupTitleBranch"
                android:text="Add New Branch"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <!-- TextView: popup title -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch ID"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginTop="10dp"/>
            <!-- Label: Branch ID -->

            <EditText
                android:id="@+id/branchIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch ID (auto)"
                android:inputType="text"
                android:backgroundTint="#111111"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:layout_marginTop="3dp"
                android:enabled="false"/>
            <!-- EditText: shows branch ID, auto-generated, disabled for editing -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch Name"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginTop="10dp"/>
            <!-- Label: Branch Name -->

            <EditText
                android:id="@+id/branchNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch Name (e.g., Galle)"
                android:inputType="text"
                android:backgroundTint="#111111"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:layout_marginTop="3dp"/>
            <!-- EditText: user enters branch name -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginTop="10dp"/>
            <!-- Label: Contact Number -->

            <EditText
                android:id="@+id/contactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="number"
                android:backgroundTint="#111111"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:layout_marginTop="3dp"/>
            <!-- EditText: user enters contact number for branch -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginTop="10dp"/>
            <!-- Label: Location -->

            <EditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location (lat, long)"
                android:inputType="text"
                android:backgroundTint="#111111"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:layout_marginTop="3dp"/>
            <!-- EditText: user enters branch coordinates as "lat, long" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <!-- LinearLayout: holds Cancel and Save buttons side by side -->

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:backgroundTint="#FFFFFF"/>
                <!-- Button: cancels adding new branch -->

                <Button
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_marginStart="10dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#000000"/>
                <!-- Button: saves the new branch -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

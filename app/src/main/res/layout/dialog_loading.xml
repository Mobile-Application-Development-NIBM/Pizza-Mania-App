<?xml version="1.0" encoding="utf-8"?>
<!-- LinearLayout: popup container with centered content -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/popup_border_bg"
    android:layout_width="300dp"
    android:layout_height="180dp">
    <!-- gravity="center": centers child views horizontally & vertically -->
    <!-- background="@drawable/popup_border_bg": gives styled border around popup -->

    <!-- ProgressBar: shows circular loading animation -->
    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminate="true"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"/>
    <!-- android:indeterminate="true": keeps animation spinning (no fixed progress) -->
    <!-- style: uses large light-themed progress bar widget -->

    <!-- TextView: displays loading text under the progress bar -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Loading..."
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <!-- layout_marginTop="10dp": adds space between progress bar and text -->
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EmployeeHomeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="5dp">

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PizzaMania"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile15"
            android:background="@null"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Profile Button" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/currentOrdersTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Orders"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_below="@id/topBar" />

    <!-- RecyclerView (fills remaining space above bottom bar) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/currentOrdersTitle"
        android:layout_above="@id/bottomAppBar"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Bottom AppBar -->
    <LinearLayout
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#333333"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home3"
            android:background="@null"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_orders4"
            android:background="@null"
            android:contentDescription="Branch Page" />
    </LinearLayout>
</RelativeLayout>

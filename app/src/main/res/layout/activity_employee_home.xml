<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployeeHomeActivity">

    <!-- Top banner -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pizzabanner3"
            android:scaleType="centerCrop"
            android:alpha="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/stripText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PizzaMania"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/default_profile9"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_button_desc" />
        </LinearLayout>
    </FrameLayout>

    <!-- Pizza Details Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="12dp">

            <!-- Availability -->
            <TextView
                android:id="@+id/availableLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available:"
                android:textSize="18sp"
                android:textColor="#333333"
                android:paddingVertical="6dp"
                android:paddingStart="8dp" />

            <Spinner
                android:id="@+id/availabilitySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/availability_array"
                android:padding="8dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/categoryTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: Pizza"
                android:textSize="18sp"
                android:textColor="#333333"
                android:paddingVertical="6dp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Chicago deep-dish pizza"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingVertical="6dp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 2500"
                android:textSize="18sp"
                android:textColor="#333333"
                android:paddingVertical="6dp"
                android:paddingStart="8dp" />

            <!-- Update button -->
            <Button
                android:id="@+id/updateStatusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Availability"
                android:backgroundTint="#FFDE21"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:paddingVertical="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

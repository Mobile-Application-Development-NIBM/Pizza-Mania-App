<?xml version="1.0" encoding="utf-8"?>

<!-- LinearLayout: card container for a single menu item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="8dp"
    android:layout_marginEnd="12dp">

    <!-- ImageView: menu item picture (e.g., pizza image) -->
    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_pizza" />

    <!-- TextView: menu item name -->
    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:singleLine="true"
        android:scrollHorizontally="false" />

    <!-- TextView: menu item price -->
    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 0"
        android:textSize="13sp"
        android:textColor="#444444" />

    <!-- Row for action button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="6dp">

        <!-- View Button (modern style) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewMenuButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="View"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#444444"
            android:gravity="center"
            app:cornerRadius="8dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_view"
            app:iconTint="#FFFFFF"
            app:rippleColor="#88FFFFFF"/>
    </LinearLayout>
</LinearLayout>

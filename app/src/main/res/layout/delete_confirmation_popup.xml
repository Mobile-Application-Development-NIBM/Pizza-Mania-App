<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/glass_bg">
    <!-- RelativeLayout: main popup container -->
    <!-- background: glassy background image -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <!-- LinearLayout: vertical layout to hold title, message, and buttons -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Delete"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#e6b33c"
            android:layout_gravity="center" />
        <!-- TextView: popup title -->

        <TextView
            android:id="@+id/deleteMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this item?"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />
        <!-- TextView: displays warning message to user -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">
            <!-- LinearLayout: holds Cancel and Delete buttons side by side -->

            <Button
                android:id="@+id/cancelDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#fcc43c"
                android:backgroundTint="#FFFFFF" />
            <!-- Button: cancels the delete action -->

            <Button
                android:id="@+id/confirmDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="10dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#e53935" />
            <!-- Button: confirms deletion, red color to indicate warning -->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


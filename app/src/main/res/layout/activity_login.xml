<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <!-- Banner at the top -->
    <FrameLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pizzabanner3"
            android:scaleType="centerCrop"
            android:alpha="0.4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PizzaMania"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Welcome text -->
    <LinearLayout
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/bannerLayout"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to continue ordering your favorite pizzas"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Login card -->
    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_below="@id/welcomeText"
        android:layout_margin="24dp"
        android:background="@drawable/card_background">

        <!-- Username -->
        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:padding="12dp"
            android:background="@drawable/search_box_border"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"/>

        <!-- Password -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:padding="12dp"
            android:background="@drawable/search_box_border"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp"/>

        <!-- Forgot password -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#FFCC00"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"/>

        <!-- Login button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#FFCC00"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <!-- Sign up link -->
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="#555555"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginForm"
        android:layout_marginTop="12dp"/>
</RelativeLayout>

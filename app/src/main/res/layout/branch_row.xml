<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">
    <!-- Root layout: container for one branch and its employees -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f44c4b"
        android:layout_marginBottom="8dp"/>
    <!-- Component: Divider strip at top of branch row -->
    <!-- background: color of the top divider strip -->
    <!-- layout_marginBottom: adds space below the strip -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- Component: Horizontal container for branch name and buttons -->

        <TextView
            android:id="@+id/branchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Branch Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <!-- Component: Branch Name text -->
        <!-- layout_weight: makes branch name take all remaining space on the left -->

        <ImageButton
            android:id="@+id/editBranchBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="@null"
            android:layout_marginStart="8dp"/>
        <!-- Component: Edit button for branch -->

        <ImageButton
            android:id="@+id/deleteBranchBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="@null"
            android:layout_marginStart="8dp"/>
        <!-- Component: Delete button for branch -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp">
        <!-- Component: Container for employees and add employee button -->
        <!-- paddingStart: indents the employee section from the branch row -->
        <!-- layout_marginTop: space between branch row and employee section -->

        <Button
            android:id="@+id/addEmployeeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Employee"
            android:layout_gravity="end"
            android:backgroundTint="#f44444"
            android:textColor="#FFFFFF"/>
        <!-- Component: Button to add a new employee to this branch -->

        <LinearLayout
            android:id="@+id/employeeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"/>
        <!-- Component: Container where employee rows are added dynamically -->
    </LinearLayout>
</LinearLayout>
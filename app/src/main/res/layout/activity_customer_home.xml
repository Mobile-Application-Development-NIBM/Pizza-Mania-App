<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <!-- Background image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pizzabanner3"
                android:scaleType="centerCrop"
                android:alpha="0.4"/>

            <!-- Top strip content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/stripText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PizzaMania"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/profileButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/default_profile9"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:contentDescription="Profile Button"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/searchBox"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:hint="Search pizzas..."
                android:padding="12dp"
                android:background="@drawable/search_box_border"
                android:textColor="#000000"
                android:textSize="18dp"
                android:inputType="text"/>

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_search6"
                android:background="@null"
                android:contentDescription="Search Button"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom AppBar -->
    <LinearLayout
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#333333"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_home3"
                android:background="@null"
                android:contentDescription="Home"/>

            <ImageButton
                android:id="@+id/ordersButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_orders4"
                android:background="@null"
                android:contentDescription="Orders"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Your main app content (e.g., menu, cart fragments) -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Chat icon FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="Open Chatbot"
        android:src="@android:drawable/ic_dialog_email"
        app:fabSize="normal" />

</RelativeLayout>

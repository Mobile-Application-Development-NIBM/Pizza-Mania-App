<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">
        <!-- gravity: centers items vertically inside the strip -->
        <!-- paddingStart: adds space on the left side of the strip -->
        <!-- paddingEnd: adds space on the right side of the strip -->

        <!-- App name -->
        <TextView
            android:id="@+id/stripText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Mania"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- This empty space pushes the button to the right -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Account profile picture -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/default_profile4"
            android:background="@null"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Profile Button"/>
        <!-- src: default image shown in the button -->
        <!-- layout_gravity: puts button at the right side vertically centered -->
        <!-- background: no default button background -->
        <!-- scaleType: makes the image fill the button evenly, cropping if needed -->
        <!-- contentDescription: accessibility description for screen readers -->
    </LinearLayout>

    <!-- Container for search at right corner below profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp">

        <!-- Edit text for typing search -->
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="Search pizzas..."
            android:padding="12dp"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:inputType="text"/>

        <!-- Search button next to the text box -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_search6"
            android:background="@null"
            android:contentDescription="Search Button"
            android:layout_marginStart="8dp"/>
        <!-- layout_marginStart: adds 8dp space to the left of this component -->
    </LinearLayout>



</LinearLayout>
